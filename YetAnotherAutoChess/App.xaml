<Application x:Class="HelixTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HelixTest"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Canvas x:Key="unitStatusBar"  x:Shared="false" Width="auto" Height="auto">
            <Viewbox Name="ViewPort1">
                <ProgressBar x:Name="unitManaBar" HorizontalAlignment="Stretch" Height="10" Margin="343,10,-51,0" VerticalAlignment="Stretch" Width="100" Value="50" Foreground="#FF0639B0">
                    <ProgressBar.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                    </ProgressBar.RenderTransform>
                </ProgressBar>
            </Viewbox>
            <Viewbox Name="ViewPort2">
                <ProgressBar x:Name="unitHealthBar" HorizontalAlignment="Stretch" Height="5" Margin="343,10,-56,0" VerticalAlignment="Stretch" Width="100" Value="100">
                    <ProgressBar.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                    </ProgressBar.RenderTransform>
                </ProgressBar>
            </Viewbox>
        </Canvas>
    </Application.Resources>
</Application>
